<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#97E6FF">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Registration Form"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/firstname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Firstname:"
        android:layout_below="@+id/title"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Fisrtname"
        android:textSize="17dp"
        android:layout_below="@+id/firstname_txt"
        />
    <TextView
        android:id="@+id/middle_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Middlename:"
        android:layout_below="@+id/firstname"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/middle_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Middlename"
        android:textSize="17dp"
        android:layout_below="@+id/middle_name_txt"
        />
    <TextView
        android:id="@+id/last_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lastname:"
        android:layout_below="@+id/middle_name"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Lastname"
        android:textSize="17dp"
        android:layout_below="@+id/last_name_txt"
        />
    <TextView
        android:id="@+id/course_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course:"
        android:layout_below="@+id/last_name"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/course_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="course"
        android:layout_toRightOf="@+id/course_txt"
        android:layout_below="@+id/last_name"
        android:layout_marginTop="10dp"        />
    <TextView
        android:id="@+id/gender_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:layout_below="@+id/course_txt"
        android:textSize="15dp"
        android:layout_marginTop="12dp"
        />
    <RadioGroup
        android:id="@+id/gender_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/course_spinner"
        android:layout_toRightOf="@+id/gender_txt"
        android:layout_marginTop="10dp"
        >

    <RadioButton
        android:id="@+id/radio_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male" />

    <RadioButton
        android:id="@+id/radio_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female" />
    </RadioGroup>
    <TextView
        android:id="@+id/phone_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: "
        android:layout_below="@+id/gender_txt"
        android:textSize="15dp"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="+91"
        android:textSize="17dp"
        android:layout_below="@+id/phone_txt"
        />
    <EditText
        android:id="@+id/phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Phone no"
        android:textSize="17dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Address : "
        android:layout_below="@+id/phone_no"
        android:textSize="15dp"
        android:layout_marginTop="12dp"
        />
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:hint="Current Address"
        android:textSize="17dp"
        android:inputType="textPostalAddress"
        android:gravity="top|start"
        android:layout_below="@+id/address_txt"
        />
    <TextView
        android:id="@+id/email_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        android:layout_below="@+id/address"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Enter Email"
        android:textSize="17dp"
        android:inputType="textPostalAddress"
        android:layout_below="@+id/email_txt"
        />
    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:layout_below="@+id/email"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Password"
        android:textSize="17dp"
        android:inputType="textPassword"
        android:layout_below="@+id/password_txt"
        />
    <TextView
        android:id="@+id/re_type_password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Type Password"
        android:textStyle="bold"
        android:layout_below="@+id/password"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/re_type_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:hint="Retype Password"
        android:textSize="17dp"
        android:inputType="textPassword"
        android:layout_below="@+id/re_type_password_txt"
        />

<Button
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Register"
    android:backgroundTint="#00B94B"
    android:layout_below="@+id/re_type_password"
    android:layout_marginTop="10dp"
    />
</RelativeLayout>